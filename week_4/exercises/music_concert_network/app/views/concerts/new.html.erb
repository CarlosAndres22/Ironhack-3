<h1>Add a new concert</h1>

<%= form_for [@concert], html: { multipart: true } do |f| %>
	<%= f.label :artist %>
	<%= f.text_field :artist %>

	<br>

	<%= f.label :venue %>
	<%= f.text_field :venue %>

	<br>

	<%= f.label :city %>
	<%= f.select :city, ["Miami", "New York City", "San Francisco", "Paris", "Buenos Aires", "Mumbai", "Barcelona", "Madrid"] %>

	<br>

	<%= f.label :date %>
	<%= f.datetime_local_field :date %>

	<br>

	<%= f.label :price %>
	<%= f.number_field :price %>

	<br>

	<%= f.label :description %>
	<%= f.text_area :description %>

	<br>

	<%= f.label :image %>
	<%= f.file_field :poster %>

	<%= f.submit 'Save' %>
<%end%>