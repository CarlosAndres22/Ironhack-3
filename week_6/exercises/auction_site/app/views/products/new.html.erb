<%= form_for [@user, @product] do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title %>
	<br>
	<%= f.label :description %>
	<%= f.text_area :description %>
	<br>
	<%= f.label :deadline %>
	<%= f.datetime_local_field :deadline %>
	<br>
	<%= f.label :minimum_bid %>
	<%= f.number_field :minimum_bid %>
	<br>
	<%= f.submit 'Create' %>
<% end %>

